generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             Int         @id @default(autoincrement())
  email          String      @unique
  password       String
  name           String?
  academicNumber String?
  isAdmin        Boolean?
  isDoctor       Boolean?
  isStudent      Boolean?
  departmentId   Int?
  subject        Subject[]
  Department     Department? @relation(fields: [departmentId], references: [id])
}

model Subject {
  id           Int        @id @default(autoincrement())
  name         String
  code         String?
  departmentId Int
  userId       Int?
  dependencies String?
  User         User?      @relation(fields: [userId], references: [id])
  department   Department @relation(fields: [departmentId], references: [id])
}

model Department {
  id      Int       @id @default(autoincrement())
  name    String
  code    String
  Subject Subject[]
  users   User[]
}
